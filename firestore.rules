rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read and write to the customer and access code collections.
    // Security is handled by the secret URL of the admin panel.
    match /customers/{customerId} {
      allow read, write: if true;
    }

    match /access_codes/{accessCodeId} {
      allow read, write: if true;
    }
  }
}
