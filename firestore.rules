rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função para verificar se o usuário é um administrador
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.isAdmin == true;
    }

    // Regras para a coleção de administradores
    match /roles_admin/{userId} {
      // Ninguém pode criar ou modificar roles a partir do cliente para segurança.
      // Isso deve ser feito manualmente no console do Firebase.
      allow read, write: if false;
    }

    // Regras para a coleção de clientes
    match /customers/{customerId} {
      // Apenas administradores podem ler e criar clientes.
      allow read, list, create: if isAdmin();
      // Ninguém pode atualizar ou deletar clientes pelo cliente.
      allow update, delete: if false;
    }

    // Regras para a coleção de códigos de acesso
    match /access_codes/{accessCodeId} {
      // Apenas administradores podem criar novos códigos.
      allow create: if isAdmin();
      
      // Qualquer pessoa pode ler um código para validar.
      // Isso é necessário na página de pricing/geração.
      allow read, list: if true;
      
      // A atualização só é permitida para marcar um código como usado.
      // 1. O código não pode ter sido usado antes.
      // 2. A atualização só pode mudar 'isUsed' para true e adicionar 'usedAt'.
      allow update: if request.resource.data.isUsed == true &&
                       resource.data.isUsed == false &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isUsed', 'usedAt']);
                       
      // Deletes não são permitidos pelo cliente.
      allow delete: if false;
    }
  }
}
