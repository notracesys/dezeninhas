rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      // Check if a document with the user's UID exists in the 'roles_admin' collection
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Admins can read and write to the roles collection itself
    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }

    // Admins can read, list, and write to customers
    match /customers/{customerId} {
      allow read, write, list: if isAdmin();
    }
    
    // Admins can create and read access codes. Any authenticated user can read a single code (for validation).
    match /access_codes/{accessCodeId} {
      // Admins can do anything
      allow read, write, list: if isAdmin();
      
      // Allow a non-admin to read a specific code if they are logged in.
      // This is for the validation step on the pricing page.
      allow get: if request.auth != null;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
