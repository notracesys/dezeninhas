rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authentication (not used in current rules)
    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow full read/write access without authentication for customers.
    // The admin panel uses a non-Firebase auth method.
    match /customers/{customerId} {
      allow read, write: if true;
    }
    
    // Allow full read/write access without authentication for access codes.
    // The admin panel uses a non-Firebase auth method.
    match /access_codes/{accessCodeId} {
      allow read, write: if true;
    }
    
    // Allow full read/write access without authentication for admin roles.
    // The admin panel uses a non-Firebase auth method.
    match /roles_admin/{userId} {
      allow read, write: if true;
    }
  }
}
