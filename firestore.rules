rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for authentication
    function isAuthenticated() {
      return request.auth != null;
    }

    // Allow full read/write access to authenticated users for customers
    match /customers/{customerId} {
      allow create, get, list, update, delete: if isAuthenticated();
    }
    
    // Allow full read/write access to authenticated users for access codes
    match /access_codes/{accessCodeId} {
      allow create, get, list, update, delete: if isAuthenticated();
    }
    
    // Allow full read/write access to authenticated users for admin roles
    match /roles_admin/{userId} {
      allow create, get, list, update, delete: if isAuthenticated();
    }
  }
}
