rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading the entire customers collection and read/write individual documents.
    // Security is handled by the secret URL of the admin panel.
    match /customers/{customerId} {
      allow read, write: if true;
    }

    // Allow reading the entire access_codes collection and read/write individual documents.
    match /access_codes/{accessCodeId} {
      allow read, write: if true;
    }
  }
}
