rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read, write, and list customers
    match /customers/{customerId} {
      allow read, write: if request.auth != null;
    }
    match /customers {
      allow list: if request.auth != null;
    }

    // Allow any authenticated user to read, write, and list access codes
    match /access_codes/{accessCodeId} {
      allow read, write: if request.auth != null;
    }
    match /access_codes {
      allow list: if request.auth != null;
    }
    
    // Allow any authenticated user to read, write, and list admin roles
    match /roles_admin/{userId} {
      allow read, write: if request.auth != null;
    }
    match /roles_admin {
        allow list: if request.auth != null;
    }
  }
}
